<form>
    <div>
        <label for="testi_name">Navn</label>
        <input type="text" name="testi_name" required>
    </div>
    <div>
        <label for="oplevelse">Din oplevelse</label>
        <textarea class="text_oplevelse" name="oplevelse" rows="6" required>
        </textarea>
    </div>
    <button>Send</button>
</form>

<style>
    form {
		display: flex;
		flex-direction: column;
		gap: 10px;
		margin-top: 20px;
		margin-left: 50px;
		margin-right: 50px;
	}

	form > div {
		display: flex;
		flex-direction: column;
	}

	label {
		font-family: var(--main-font);
		font-weight: var(--font-light);
		font-size: 1rem;
		color: var(--secondary-color);
	}

	input, textarea {
		background-color: transparent;
		border: 1.7px solid var(--main-color);

		font-family: var(--text-font);

		padding: 5px;
	}

	input:focus-within, 
	textarea:focus-within {
		outline: none;
	}

	textarea {
		resize: none;
	}

	button {
		background-color: var(--main-color);
		color: white;
		border: none;
		padding: 5px;
		font-family: var(--main-font);
		font-weight: var(--font-light);
		font-size: 1rem;

		width: 50%;

		place-self: end;
	}


	@media (min-width:800px) {
		form {
			max-width: 650px;
			margin: auto;
		}

		label {
			font-size: 1.2rem;
		}

		button {
			width: 30%;
			font-size: 1.4rem;
		}
    }
</style>

